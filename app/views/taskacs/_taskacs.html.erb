<ul class="media-list">
  <% taskacs.each do |taskac| %>
    <li class="media">
      <div class="media-left">
        <img class="media-object img-rounded" src="<%= gravatar_url(taskac.user, options = { size: 50 }) %>" alt="">
      </div>
      <div class="media-body">
        <div>
          <%= link_to taskac.user.name, user_path(taskac.user) %> <span class="text-muted">posted at <%= taskac.created_at %></span>
        </div>
        <div>
          <p><%= taskac.content %></p>
        </div>
        <div>
          <% if current_user == taskac.user %>
            <%= link_to "Delete", taskac, method: :delete, data: { confirm: "You sure?" }, class: 'btn btn-danger btn-xs' %>
          <% end %>
        </div>
      </div>
    </li>
  <% end %>
  <%= paginate taskacs %>
</ul>