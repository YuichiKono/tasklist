<div class="row">

    <%= form_for(task) do |f| %>
      <% if task.errors.any? %>
        <div class="alert alert-warning">
          <ul>
            <% task.errors.full_messages.each do |task| %>
              <li><%= task %></li>
            <% end %>
          </ul>
        </div>
      <% end %>
      
      <div class="col-sm-offset-2 col-sm-8 col-lg-offset-3 col-lg-6">
      <div class="form-group" %>
        <%= f.label :status, 'ステータス' %>
        <%= f.text_field :status, class: 'form-control' %>
      </div>
      </div>

      <div class="col-sm-offset-2 col-sm-8 col-lg-offset-3 col-lg-6">
      <div class="form-group">
        <%= f.label :content, '内容' %>
        <%= f.text_field :content, class: 'form-control' %>
      </div>
      </div>
      
      <div class="col-xs-1">
      <%= f.submit '投稿', class: 'btn btn-primary' %>
      </div>
        
    <% end %>
</div>